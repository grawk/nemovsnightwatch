{
    "plugins": {
        "view": {
            "module": "nemo-view",
            "arguments": ["path:locator"]
        }
    },
    "output": {
        "reports": "path:report"
    },
    "profiles": {
        "base": {
            "driver": {
                "browser": "chrome"
            },
            "data": {
                "baseUrl": "http://localhost:8000"
            },
            "tests": "path:./tests/inline.js",
            "mocha": {
                "timeout": 180000,
                "reporter": "mochawesome",
                "reporterOptions": {
                    "quiet": true
                }
            }
        },
        "chrome": {
            "parallel": "data",
            "tests": "path:./tests/view.js",
            "data": "require:./config/scenarios",
            "driver": {
                "browser": "chrome"
            }
        },
        "firefox": {
            "parallel": "data",
            "tests": "path:./tests/view.js",
            "data": "require:./config/scenarios",
            "driver": {
                "browser": "firefox"
            }
        },
        "flow": {
            "parallel": "data",
            "tests": "path:./tests/flow.js",
            "data": "require:./config/scenarios"
        }
    }
}
